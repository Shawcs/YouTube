<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.alex.youtube">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="fr.alex.youtube.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="fr.alex.youtube.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fr.alex.youtube.activity.VideoResultActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="fr.alex.youtube.activity.VideoInfoActivity"
            android:label="@string/title_activity_video_info"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
